{
  "name": "@bauer-group/ghost-bunnycdn-connector",
  "version": "0.7.1",
  "description": "Ghost CMS service for automatic BunnyCDN cache validation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "docker-debug": "docker compose --env-file .env up --build",
    "update:safe": "npm update && npm audit fix",
    "update:latest": "npx npm-check-updates -u && npm install",
    "docker:build": "docker build -t ghost-bunnycdn-connector ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bauer-group/IP-Ghost.BunnyCDN.Connector.git"
  },
  "keywords": [
    "node",
    "typescript",
    "webhooks",
    "bunnycdn"
  ],
  "author": "BAUER GROUP (Karl Bauer)",
  "license": "MIT",
  "dependencies": {
    "@tryghost/admin-api": "^1.14.2",
    "axios": "^1.13.2",
    "body-parser": "^2.2.1",
    "compression": "^1.8.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
